<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:id="@+id/albumView" android:layout_height="fill_parent">
	<RelativeLayout android:id="@+id/linearLayout1"
		android:background="@drawable/tab_indicator" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:padding="5dip">
		<Button android:id="@+id/imageButton1" android:text="返回"
			android:textColor="#FFFFFFFF" android:layout_width="wrap_content"
			android:background="@drawable/left" android:paddingLeft="15dip"
			android:paddingRight="5dip" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:visibility="gone" />

		<Button android:id="@+id/imageButton2" android:text="正在播放"
			android:textColor="#FFFFFFFF" android:layout_width="wrap_content"
			android:background="@drawable/right" android:paddingRight="15dip"
			android:paddingLeft="5dip" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:onClick="now_playing">
		</Button>
	</RelativeLayout>
	<TextView android:layout_height="1px" android:layout_width="fill_parent"
		android:background="#FFFFFF" android:layout_below="@id/linearLayout1"
		android:id="@+id/divider" />
	<ListView android:layout_width="match_parent" android:id="@+id/listView1"
		android:layout_below="@id/divider" android:layout_height="wrap_content"></ListView>
</RelativeLayout>
